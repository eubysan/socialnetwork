<form class="w-full" action="/signup" method="post">
        <div class="py-10">
            <div class="flex bg-white rounded-lg shadow-lg overflow-hidden mx-auto max-w-sm lg:max-w-3xl justify-center">
                <div class="hidden lg:block lg:w-1/2 bg-cover left-0"
                style="background-image:url('https://images.unsplash.com/photo-1546514714-df0ccc50d7bf?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=667&q=80')">
                </div>
                <div class="w-full p-8 lg:w-1/2">
                    <p class="text-xl text-gray-600 text-center">Registrate</p>
                    {{#each validation.errors}}
                        <p class="bg-red-200">{{this}}</p>
                    {{/each}}
                    <div class="mt-3">
                            <input class="bg-gray-200 text-gray-700 focus:outline-none focus:shadow-outline border border-gray-300 rounded py-1 px-4 block w-full appearance-none"
                                type="text" name="username" placeholder="Nombre de Usuario" value="{{user.username}}" required>
                    </div>
                    <div class="mt-3">
                        <input class="bg-gray-200 text-gray-700 focus:outline-none focus:shadow-outline border border-gray-300 rounded py-1 px-4 block w-full appearance-none"
                            type="text" name="name" placeholder="Nombre Completo" value="{{user.name}}" required>
                    </div>
                    
                    <div class="mt-3">
                        <p class="text-xs text-gray-500">Fecha de Nacimiento</p>
                        <input class="bg-gray-200 text-gray-700 focus:outline-none focus:shadow-outline border border-gray-300 rounded py-1 px-4 block w-full appearance-none"
                            type="date" name="birthday" placeholder="Fecha de nacimiento" value="{{user.birthday}}">
                    </div>
                    <div class="mt-3">
                        <select class="bg-gray-200 text-gray-700 focus:outline-none focus:shadow-outline border border-gray-300 rounded py-1 px-4 block w-full appearance-none"
                            type="select" name="gender" placeholder="Género" value="{{user.gender}}" required>
                            <option value="" selected disabled>Genero</option>
                            <option value="1"> Masculino</option>
                            <option value="0"> Femenino</option>
                        </select>
                    </div>
                    <div class="mt-3">
                        <input class="bg-gray-200 text-gray-700 focus:outline-none focus:shadow-outline border border-gray-300 rounded py-1 px-4 block w-full appearance-none"
                            type="email" name="email" placeholder="Correo Electrónico" value="{{user.email}}" required>
                    </div>
                    <div class="mt-3">
                        <input class="bg-gray-200 text-gray-700 focus:outline-none focus:shadow-outline border border-gray-300 rounded py-1 px-4 block w-full appearance-none"
                            type="password" name="password" placeholder="Contraseña" required>
                    </div>
                    <div class="mt-3">
                        <input class="bg-gray-200 text-gray-700 focus:outline-none focus:shadow-outline border border-gray-300 rounded py-1 px-4 block w-full appearance-none"
                            type="password" name="passwordRepeat" placeholder="Repite Contraseña" required>
                    </div>
                    <div class="mt-3">
                        <button class="bg-blue-500 text-white font-bold py-2 px-4 w-full rounded hover:bg-blue-600">Registrarse</button>
                    </div>
                    <div class="mt-4 flex items-center justify-between">
                        <span class="border-b w-1/5 md:w-1/5"></span>
                        <a href="/" class="text-xs text-gray-500 uppercase">¿Tienes cuenta? Inicia sesión</a>
                        <span class="border-b w-1/5 md:w-1/5"></span>
                    </div>
                </div>
            </div>
        </div>
</form>
